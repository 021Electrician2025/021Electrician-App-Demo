# Demo Environment Variables for Vercel Deployment
# Copy this file to .env.local for local development

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-key-for-jwt-signing"
NEXTAUTH_URL="https://your-app.vercel.app"

# Demo Credentials (these are built into the mock data)
# Manager: manager@grandpalace.com / demo123
# Technician: tech@grandpalace.com / demo123  
# Staff: staff@grandpalace.com / demo123
# Admin: admin@grandpalace.com / demo123

# Email Configuration (Optional - for demo notifications)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@your-app.vercel.app"

# Development Mode
NODE_ENV="production"